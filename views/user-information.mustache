<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>User Information</title>
    <!-- bootstrap css for form styles + structures -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <!-- app styles -->
    <link rel="stylesheet" type="text/css" href="../styles.css">
  </head>
  <body>
    <div class="container-fluid body-wrap">
      <!-- NOTE: need disclaimer/ notification that adding information is optional, but the more added = better "we" can help// necessary to use all of app's features -->
      <div class="container-fluid">
        <h3>Your Information on File</h3>
        <ul>
          {{#userData}}
          <li>Username: {{username}}</li>
          <li>Full Name: {{firstname}}  {{lastname}}</li>
          <li>Email: {{email}}</li>
          {{/userData}}
        <ul>
      </div>
      <hr>
      <div class="container-fluid">
      <h3>Add Information</h3>
<!-- add email -->
      <p class="add-containers">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addEmail" aria-expanded="false" aria-controls="addEmail">
          Add Your Email Address
        </button>
      </p>
      <div class="collapse" id="addEmail">
        <div class="card card-block add-info-cards">
          <form method="POST" action="/addEmail" class="container-fluid" id="addEmailForm">
            <div class="form-group" id="email1Wrap">
              <label class="form-control-label" for="email1">Email Address</label>
              <input class="form-control" type="email" name="email1" id="email1" placeholder="Enter your email address">
            </div>
            <div class="form-group" id="email2Wrap">
              <label class="form-control-label" for="email2">Confirm Email</label>
              <input class="form-control" type="email" name="email2" id="email2" placeholder="Retype email to confirm">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
<!-- add addl address -->
      <p class="add-containers">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addAddlAddress" aria-expanded="false" aria-controls="addAddlAddress">
          Add Additional Address
        </button>
      </p>
      <div class="collapse" id="addAddlAddress">
        <div class="card card-block add-info-cards">
          <form method="POST" action="/addAddress" class="container-fluid" id="addAddressForm">
            <div class="form-group">
              <label for="streetAddress" class="col-form-label">Street Address</label>
              <input type="text" name="streetAddress" required class="form-control" id="streetAddress" placeholder="1234 Main St">
            </div>
            <div class="form-group">
              <label for="addressLine2" class="col-form-label">Address Specifics</label>
              <input type="text" name="addressLine2" class="form-control" id="addressLine2" placeholder="Apartment, studio, or floor">
            </div>
            <div class="form-row city-state-zip">
              <div class="form-group col-md-6">
                <label for="inputCity" class="col-form-label">City</label>
                <input type="text" name="inputCity" required class="form-control" id="inputCity">
              </div>
              <div class="form-group col-md-4">
                <label for="inputState" class="col-form-label">State</label>
                <input type="text" name="inputState" required class="form-control" id="inputState" ></input>
              </div>
              <div class="form-group col-md-2">
                <label for="inputZip" class="col-form-label">Zip</label>
                <input type="text" name="inputZip" required class="form-control" id="inputZip">
              </div>
            </div>
            <div class="form-group details-container">
              <label for="details" class="col-form-label">Address Details</label>
              <textarea name="details" class="form-control" placeholder="Suggestions: Address type, Reason for adding address, Building details to aid emergency response team..."></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
<!-- add safety contact -->
      <p class="add-containers">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#addSafetyContact" aria-expanded="false" aria-controls="addSafetyContact">
          Add Safety Contact
        </button>
      </p>
      <div class="collapse" id="addSafetyContact">
        <div class="card card-block add-info-cards">
          <form method="POST" action="/addSafetyContact" class="container-fluid" id="safetyContactForm">
            <div class="form-group">
              <label class="form-control-label" for="firstname">First Name</label>
              <input  type="text" name="firstname" required class="form-control" placeholder="Enter contact's first name">
            </div>
            <div class="form-group">
              <label class="form-control-label" for="lastname">Last Name</label>
              <input type="text" name="lastname" required class="form-control" placeholder="Enter contact's last name">
            </div>
            <!-- change this to select with options ?  -->
            <div class="form-group">
              <label class="form-control-label" for="relationship">Relationship</label>
              <input type="text" name="relationship" required class="form-control" placeholder="Ex: Family, Friend, Employer ... ">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
   </div>
    <!-- bootstrap: jquery + popper scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <!-- email + confirm email validation script -->
    <script type="text/javascript">
       window.onload = function () {
         document.getElementById("email1").onchange = validatePassword;
         document.getElementById("email2").onchange = validatePassword;
       }
       function validatePassword(){
       var em2= document.getElementById("email2").value;
       var em1= document.getElementById("email1").value;
       if(em1!=em2)
         document.getElementById("email2").setCustomValidity("Emails Must Match");
       else
         document.getElementById("email2").setCustomValidity('');
       //empty string means no validation error
       }
    </script>
  </body>
</html>
